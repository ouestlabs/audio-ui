{
  "name": "@audio-ui/react",
  "version": "0.0.3",
  "description": "A collection of React UI primitives for Audio UI.",
  "license": "MIT",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ouestlabs/audio-ui.git",
    "directory": "packages/ui"
  },
  "homepage": "https://github.com/ouestlabs/audio-ui/tree/main/packages/ui",
  "bugs": {
    "url": "https://github.com/ouestlabs/audio-ui/issues"
  },
  "keywords": [
    "audio-ui",
    "react",
    "ui",
    "primitives"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:pkg": "bunx --bun tsup",
    "dev": "bunx --bun tsup --watch",
    "lint": "biome check --write .",
    "lint:fix": "biome check --write --unsafe .",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "@audio-ui/utils": "latest"
  },
  "devDependencies": {
    "@audio-ui/typescript": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/bun": "^1.3.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@types/react": "^18 || ^19",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
