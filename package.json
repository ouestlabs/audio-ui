{
  "name": "audio-ui",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/**/*"
    ]
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:pkg": "turbo build:pkg",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "clean": "turbo clean && rm -rf node_modules bun.lock",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build:pkg && changeset publish"
  },
  "packageManager": "bun@1.3.4",
  "engines": {
    "bun": ">=1.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@changesets/cli": "^2.29.8",
    "@manypkg/cli": "^0.25.1",
    "turbo": "2.6.1",
    "ultracite": "6.3.2"
  }
}
